@model Teacher
@{
    ViewBag.Title = "Teacher Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/login.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        
        <!-- Right side with the login form -->
        <div class="login-form col-md-5">
        <h2>Teacher Login</h2>
        <br />
        @using (Html.BeginForm("TeacherLogin", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="TeacherEmail">Email</label>
                <input asp-for="TeacherEmail" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="TeacherEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherPassword">Password</label>
                <input asp-for="TeacherPassword" type="password" class="form-control" placeholder="Enter your password" />
                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <a href="@Url.Action("TeacherForgotPassword", "Account")">Forgot Password?</a>
            </div>
            <br />
             <div style="text-align:center; ">
                    <button type="submit" class="btn btn-primary">Login</button>
             </div>
        }
        <p>Don't have an account? <a href="@Url.Action("TeacherRegister", "Account")">Register here</a></p>
    </div>
        <!-- Left side with the image -->
        <div class="login-image col-md-7 "><img src="~/teacherstudent.jpg" class="img-fluid" alt="Image" /></div>
    </div>
</div>
