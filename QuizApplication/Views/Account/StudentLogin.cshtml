@model Student
@{
    ViewBag.Title = "Student Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/login.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <!-- Left side with the image -->
        <div class="login-image col-md-7 "><img src="~/teacherstudent.jpg" class="img-fluid" alt="Image" /></div>

        <!-- Right side with the login form -->
        <div class="login-form col-md-5">
            <h2>Student Login</h2>
            <br />
            @using (Html.BeginForm("StudentLogin", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="StudentEmail">Email:</label>
                    <input asp-for="StudentEmail" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="StudentEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentPassword">Password:</label>
                    <input asp-for="StudentPassword" type="password" class="form-control" placeholder="Enter your password" />
                    <a href="@Url.Action("StudentForgotPassword", "Account")">Forgot Password?</a>
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                </div>
                <br />
                <div style="text-align:center">
                    <button type="submit" class="btn btn-primary" >Login</button>
                </div>
            }
            <p>Don't have an account? <a href="@Url.Action("StudentRegister", "Account")">Register here</a></p>
        </div>
    </div>
</div>
