@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Enter Room Number</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/instructions.js"></script>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-between">
            <div class="col-md-10">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <h1 class="text-center mb-4">Enter Room Number</h1>
                        <input type="text" id="room" name="room" placeholder="Room Number" class="form-control mb-4" />
                        <button type="submit" class="btn btn-dark btn-block">Start Test</button>
                        <br>
                        <div id="instruction" data-target="#myModal" style="color:blue; text-decoration:underline; cursor:pointer; float:right;">
                            Read the instructions before start the test <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </div>

                    </div>
                    <br />
                    <div>
                        @if (@ViewBag.error != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Error!</strong> @ViewBag.error
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Instructions</h4>
                    @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                </div>
                <div class="modal-body">
                    <!-- Content of your popup -->
                    <p class="popup">
                        <ul>
                            <li>Its a time-based exam.</li>
                            <li>Close all browsers/tabs before start of online examination.</li>
                            <li>Each Incorrect answer carry negative marking.</li>
                            <li>If you click on <span class="text-danger">"EndExam"</span> the current answered question will not be saved.</li>
                        </ul>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success " data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
