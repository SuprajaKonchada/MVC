@model Question

@{
    ViewData["Title"] = "Details";
}

<h3>Question Details</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OptionA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OptionA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OptionB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OptionB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OptionC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OptionC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OptionD)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OptionD)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CorrectOption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CorrectOption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NegativeMark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NegativeMark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Duration(seconds)")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit" asp-route-id="@Model?.Id" method="get">
        <button type="submit" class="btn btn-primary">Edit</button> |
        <a asp-action="ViewAllQuestions" asp-route-id="@Model.CategoryId" class="btn btn-default">Back to List</a>
    </form> 
</div>